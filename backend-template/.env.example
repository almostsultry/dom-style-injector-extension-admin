# Backend Environment Variables
# Copy this to .env and fill in your values
# NEVER commit the actual .env file!

# Azure AD Application (Confidential Client)
AZURE_CLIENT_ID=your-app-client-id
AZURE_CLIENT_SECRET=your-app-client-secret-KEEP-THIS-SECRET
AZURE_TENANT_ID=your-tenant-id-or-common

# Microsoft 365 License Configuration
LICENSE_SKU_ID=your-sku-id-from-partner-center
LICENSE_SERVICE_PLAN_ID=your-service-plan-id

# Extension Configuration
EXTENSION_ID=your-chrome-extension-id

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (if using)
DATABASE_URL=your-database-connection-string
DATABASE_ENCRYPTION_KEY=your-256-bit-key

# Redis Configuration (for caching/sessions)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# API Keys for Additional Services (if needed)
SENDGRID_API_KEY=for-email-notifications
SLACK_WEBHOOK_URL=for-alerts

# Security Settings
JWT_SECRET=your-jwt-secret-for-signing
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings (production)
ALLOWED_ORIGINS=chrome-extension://your-extension-id