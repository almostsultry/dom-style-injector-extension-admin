# Development Environment Variables
# Copy this to .env for local development

# Server Configuration
PORT=3000
NODE_ENV=development

# Azure AD Configuration (Development App Registration)
# Create a test app registration in Azure AD for development
AZURE_CLIENT_ID=your-dev-client-id
AZURE_CLIENT_SECRET=your-dev-client-secret
AZURE_TENANT_ID=common

# Mock License Configuration for Development
LICENSE_SKU_ID=DEV_SKU_ID
LICENSE_SERVICE_PLAN_ID=DEV_SERVICE_PLAN_ID

# Extension Configuration
EXTENSION_ID=your-dev-extension-id

# Database Configuration (local Docker PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/dominjector

# Redis Configuration (local Docker Redis)
REDIS_URL=redis://localhost:6379

# Security (use simple values for development)
JWT_SECRET=dev-jwt-secret-change-in-production
ENCRYPTION_KEY=dev-encryption-key-32-characters

# Logging
LOG_LEVEL=debug

# CORS (allow localhost for development)
ALLOWED_ORIGINS=chrome-extension://your-dev-extension-id,http://localhost:3000

# Optional Services (development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# Feature Flags
ENABLE_MOCK_DATA=true
BYPASS_AUTH=false
VERBOSE_LOGGING=true