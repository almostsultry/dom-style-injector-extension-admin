{
  "manifest_version": 3,
  "name": "D365 DOM Style Injector",
  "version": "1.0.0",
  "description": "A browser extension for CSS injection and DOM manipulation.",
  "permissions": ["storage", "identity"],
  "host_permissions": ["https://*.dynamics.com/"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/scripts/service-worker.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
