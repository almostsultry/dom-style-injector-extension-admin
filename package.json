{
  "name": "dom-style-injector-extension-admin",
  "version": "1.0.0",
  "description": "Administrative version of DOM Style Injector Extension with full CRUD capabilities and Microsoft Graph synchronization",
  "main": "src/manifest.json",
  "scripts": {
    "dev": "npm run dev:admin",
    "dev:admin": "webpack serve --config build/webpack.config.js --env version=admin --env mode=development",
    "dev:user": "webpack serve --config build/webpack.config.js --env version=user --env mode=development",
    
    "build": "npm run build:admin",
    "build:admin": "npm run build:admin:chrome && npm run build:admin:edge",
    "build:user": "npm run build:user:chrome && npm run build:user:edge",
    "build:admin:chrome": "webpack --config build/webpack.config.js --env version=admin --env browser=chrome --env mode=production",
    "build:admin:edge": "webpack --config build/webpack.config.js --env version=admin --env browser=edge --env mode=production",
    "build:user:chrome": "webpack --config build/webpack.config.js --env version=user --env browser=chrome --env mode=production",
    "build:user:edge": "webpack --config build/webpack.config.js --env version=user --env browser=edge --env mode=production",
    "build:all": "npm run build:admin && npm run build:user",
    "build:prod": "NODE_ENV=production npm run build:all",
    
    "package": "npm run package:admin",
    "package:admin": "npm run package:admin:chrome && npm run package:admin:edge",
    "package:user": "npm run package:user:chrome && npm run package:user:edge",
    "package:admin:chrome": "node scripts/package-extension.js --version=admin --browser=chrome",
    "package:admin:edge": "node scripts/package-extension.js --version=admin --browser=edge",
    "package:user:chrome": "node scripts/package-extension.js --version=user --browser=chrome",
    "package:user:edge": "node scripts/package-extension.js --version=user --browser=edge",
    
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:performance": "node tests/performance/run-tests.js",
    "test:post-deployment:chrome": "node tests/deployment/chrome-verification.js",
    "test:package:admin:chrome": "node tests/validation/validate-package.js --version=admin --browser=chrome",
    "test:package:user:chrome": "node tests/validation/validate-package.js --version=user --browser=chrome",
    "test:extension:chrome": "node tests/validation/test-extension.js --browser=chrome",
    
    "lint": "eslint src/**/*.js tests/**/*.js build/**/*.js scripts/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js build/**/*.js scripts/**/*.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    
    "validate:manifest:admin": "node scripts/validate-manifest.js --version=admin",
    "validate:manifest:user": "node scripts/validate-manifest.js --version=user",
    "validate:package:chrome": "web-ext lint --source-dir=dist/admin/chrome",
    "validate:package:edge": "web-ext lint --source-dir=dist/admin/edge",
    "check:permissions": "node scripts/check-permissions.js",
    
    "version:bump": "node scripts/version-bump.js",
    "changelog:generate": "node scripts/generate-changelog.js",
    "changelog:update": "node scripts/update-changelog.js",
    
    "docs:build": "node scripts/build-docs.js",
    "docs:update-version": "node scripts/update-docs-version.js",
    "docs:generate-api": "node scripts/generate-api-docs.js",
    "docs:update-badges": "node scripts/update-readme-badges.js",
    
    "release": "node scripts/release.js",
    "release:prepare": "npm run version:bump && npm run changelog:update",
    "release:build": "npm run build:prod && npm run package:admin",
    
    "deploy:chrome": "node scripts/deploy-chrome.js",
    "deploy:edge": "node scripts/deploy-edge.js",
    
    "monitor:chrome-metrics": "node scripts/monitor-chrome-metrics.js",
    "security:scan": "npm audit && snyk test",
    "security:fix": "npm audit fix && snyk wizard",
    
    "clean": "rimraf dist/ coverage/ playwright-report/ .nyc_output/",
    "clean:build": "rimraf dist/",
    "clean:deps": "rimraf node_modules/ package-lock.json && npm install",
    
    "prepare": "husky install",
    "precommit": "lint-staged",
    "prepush": "npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/dom-style-injector-extension-admin.git"
  },
  "keywords": [
    "chrome-extension",
    "edge-extension",
    "css-injection",
    "dom-manipulation",
    "microsoft-graph",
    "sharepoint",
    "enterprise",
    "admin-tools",
    "crm-customization",
    "manifest-v3",
    "azure-ad",
    "msal"
  ],
  "author": {
    "name": "Your Organization",
    "email": "admin-tools@company.com",
    "url": "https://company.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/dom-style-injector-extension-admin/issues"
  },
  "homepage": "https://github.com/your-org/dom-style-injector-extension-admin#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "Chrome >= 88",
    "Edge >= 88"
  ],
  "dependencies": {
    "@azure/msal-browser": "^3.5.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^8.50.0",
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.248",
    "@types/jest": "^29.5.0",
    "babel-loader": "^9.1.0",
    "chrome-webstore-upload": "^3.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "coveralls": "^3.1.1",
    "css-loader": "^6.8.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.0",
    "lint-staged": "^15.0.0",
    "mini-css-extract-plugin": "^2.7.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "snyk": "^1.1244.0",
    "style-loader": "^3.3.0",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "zip-webpack-plugin": "^4.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-webextension-mock",
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/lib/**",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.js",
      "<rootDir>/tests/integration/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit",
      "commit-msg": "node scripts/validate-commit-message.js"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dom-style-injector-admin@company.com",
      "strict_min_version": "109.0"
    }
  },
  "config": {
    "chrome_extension_id_admin": "admin-extension-id-here",
    "chrome_extension_id_user": "user-extension-id-here",
    "edge_extension_id_admin": "admin-edge-id-here",
    "edge_extension_id_user": "user-edge-id-here"
  }
}