{
  "name": "dom-style-injector-extension-admin",
  "version": "2.0.7",
  "description": "Admin interface for injecting customizations into a DOM after the content is loaded",
  "private": true,
  "author": "DOM Style Injector Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almostsultry/dom-style-injector-extension-admin.git"
  },
  "bugs": {
    "url": "https://github.com/almostsultry/dom-style-injector-extension-admin/issues"
  },
  "homepage": "https://github.com/almostsultry/dom-style-injector-extension-admin#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development webpack --config build/webpack.config.js --watch",
    "build": "node build/build.js",
    "build:prod": "NODE_ENV=production npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html,css}\"",
    "version:bump": "node scripts/version-bump.js",
    "manifest:generate": "node scripts/generate-manifest.js",
    "package:extension": "node scripts/package-extension.js",
    "package:chrome": "npm run package:extension",
    "package:edge": "npm run package:extension",
    "release": "node build/release.js",
    "deploy:chrome": "node scripts/deploy-chrome.js",
    "deploy:edge": "node scripts/deploy-edge.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "pretest": "npm run lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "@azure/msal-browser": "^3.6.0",
    "@microsoft/microsoft-graph-client": "^3.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@eslint/js": "^9.5.0",
    "@playwright/test": "^1.40.1",
    "archiver": "^6.0.1",
    "chalk": "^4.1.2",
    "clean-css": "^5.3.3",
    "copy-webpack-plugin": "^13.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.9",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semver": "^7.5.4",
    "sinon": "^18.0.0",
    "sinon-chrome": "^3.0.1",
    "terser": "^5.26.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/tests/__mocks__/styleMock.js"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "user-version/**/*.js",
      "!src/lib/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "chrome-extension",
    "edge-extension",
    "dom-manipulation",
    "css-injection",
    "enterprise",
    "microsoft-graph",
    "sharepoint",
    "manifest-v3"
  ]
}
